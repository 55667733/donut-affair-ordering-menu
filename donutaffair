<body>
    <div class="container">
        <header>
            <h1>The Donut Affair</h1>
            <p class="subtitle">Fresh Coffee • Premium Tea • Delicious Shakes</p>
        </header>

        <div class="main-content">
            <div class="menu">
                <!-- Coffee Section -->
                <div class="menu-section">
                    <h2 class="category-title">Coffee (Single Origin Coffee)</h2>
                    <div class="menu-items" id="coffee-items">
                        <!-- Coffee items will be populated by JavaScript -->
                    </div>
                </div>

                <!-- Tea Section -->
                <div class="menu-section">
                    <h2 class="category-title">Tea</h2>
                    <div class="menu-items" id="tea-items">
                        <!-- Tea items will be populated by JavaScript -->
                    </div>
                </div>

                <!-- Shakes Section -->
                <div class="menu-section">
                    <h2 class="category-title">Shakes</h2>
                    <div class="menu-items" id="shake-items">
                        <!-- Shake items will be populated by JavaScript -->
                    </div>
                </div>
            </div>

            <!-- Cart -->
            <div class="cart">
                <h3 class="cart-title">Your Order</h3>
                <div id="cart-items">
                    <div class="cart-empty">Your cart is empty</div>
                </div>
                <div id="cart-total" class="cart-total" style="display: none;">
                    <div class="subtotal-row">
                        <span>Subtotal:</span>
                        <span id="subtotal-amount">₹0</span>
                    </div>
                    <div class="gst-row">
                        <span>SGST (2.5%):</span>
                        <span id="sgst-amount">₹0</span>
                    </div>
                    <div class="gst-row">
                        <span>CGST (2.5%):</span>
                        <span id="cgst-amount">₹0</span>
                    </div>
                    <div class="total-row">
                        <span class="total-label">Total:</span>
                        <span class="total-amount" id="total-amount">₹0</span>
                    </div>
                </div>

                <div class="order-form">
                    <div class="form-group">
                        <label for="customer-name">Name (Optional)</label>
                        <input type="text" id="customer-name" placeholder="Enter your name">
                    </div>
                    <div class="form-group">
                        <label for="order-notes">Notes</label>
                        <textarea id="order-notes" placeholder="Table number, pickup, or delivery instructions"></textarea>
                    </div>
                    <button class="checkout-btn" id="checkout-btn" onclick="checkout()" disabled>
                        📱 Order via WhatsApp
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Menu data
        const menuData = {
            coffee: [
                { name: "Piccolo (Hot)", price: 180 },
                { name: "Espresso (Hot)", price: 180 },
                { name: "Espresso (Cold)", price: 200 },
                { name: "Americano (Hot)", price: 220 },
                { name: "Americano (Cold)", price: 240 },
                { name: "Affogato (Cold)", price: 240 },
                { name: "Cappuccino (Hot)", price: 260 },
                { name: "Caramel Cappuccino (Hot)", price: 280 },
                { name: "Cafe Latte (Hot)", price: 290 },
                { name: "Café Mocha (Hot)", price: 330 },
                { name: "Iced Mocha (Cold)", price: 360 },
                { name: "Iced Latte (Cold)", price: 280 },
                { name: "Hazelnut Latte (Cold)", price: 300 },
                { name: "Caramel Latte (Cold)", price: 290 },
                { name: "TDA House Latte (Cold)", price: 350 },
                { name: "Honey Cinnamon Latte (Cold)", price: 300 }
            ],
            tea: [
                { name: "Green Tea - Lemon (Hot)", price: 150 },
                { name: "Green Tea - Tulsi (Hot)", price: 150 },
                { name: "Green Tea - Mint (Hot)", price: 180 },
                { name: "Green Tea - Chamomile Lavender (Hot)", price: 200 },
                { name: "Iced Tea (Cold)", price: 180 },
                { name: "Peach Iced Tea (Cold)", price: 200 },
                { name: "Hibiscus Iced Tea (Cold)", price: 250 }
            ],
            shakes: [
                { name: "Red Velvet Cheesecake Shake", price: 270 },
                { name: "Shortbread Cookie Milk Shake", price: 270 },
                { name: "Caramel Milkshake", price: 250 },
                { name: "Chocolate Shake", price: 270 },
                { name: "Blueberry Milkshake", price: 270 }
            ]
        };

        // Cart state
        let cart = {};
        let subtotal = 0;
        let sgst = 0;
        let cgst = 0;
        let total = 0;

        // Initialize the menu
        function initMenu() {
            // Populate coffee items
            const coffeeContainer = document.getElementById('coffee-items');
            menuData.coffee.forEach(item => {
                coffeeContainer.appendChild(createMenuItem(item));
            });

            // Populate tea items
            const teaContainer = document.getElementById('tea-items');
            menuData.tea.forEach(item => {
                teaContainer.appendChild(createMenuItem(item));
            });

            // Populate shake items
            const shakeContainer = document.getElementById('shake-items');
            menuData.shakes.forEach(item => {
                shakeContainer.appendChild(createMenuItem(item));
            });
        }

        // Create a menu item element
        function createMenuItem(item) {
            const menuItem = document.createElement('div');
            menuItem.className = 'menu-item';
            
            menuItem.innerHTML = `
                <div class="item-info">
                    <div class="item-name">${item.name}</div>
                    <div class="item-price">₹${item.price}</div>
                </div>
                <button class="add-btn" onclick="addToCart('${item.name}', ${item.price})">Add</button>
            `;
            
            return menuItem;
        }

        // Add item to cart
        function addToCart(itemName, price) {
            if (cart[itemName]) {
                cart[itemName].quantity += 1;
            } else {
                cart[itemName] = {
                    price: price,
                    quantity: 1
                };
            }
            updateCart();
        }

        // Remove item from cart
        function removeFromCart(itemName) {
            if (cart[itemName]) {
                cart[itemName].quantity -= 1;
                if (cart[itemName].quantity <= 0) {
                    delete cart[itemName];
                }
            }
            updateCart();
        }

        // Update cart display
        function updateCart() {
            const cartItemsContainer = document.getElementById('cart-items');
            const cartTotalContainer = document.getElementById('cart-total');
            const subtotalElement = document.getElementById('subtotal-amount');
            const sgstElement = document.getElementById('sgst-amount');
            const cgstElement = document.getElementById('cgst-amount');
            const totalAmountElement = document.getElementById('total-amount');
            const checkoutBtn = document.getElementById('checkout-btn');

            // Clear cart display
            cartItemsContainer.innerHTML = '';
            subtotal = 0;

            // Check if cart is empty
            const cartKeys = Object.keys(cart);
            if (cartKeys.length === 0) {
                cartItemsContainer.innerHTML = '<div class="cart-empty">Your cart is empty</div>';
                cartTotalContainer.style.display = 'none';
                checkoutBtn.disabled = true;
                return;
            }

            // Display cart items
            cartKeys.forEach(itemName => {
                const item = cart[itemName];
                const itemTotal = item.price * item.quantity;
                subtotal += itemTotal;

                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                    <div class="item-details">
                        <div class="cart-item-name">${itemName}</div>
                        <div class="cart-item-price">₹${item.price} each</div>
                    </div>
                    <div class="quantity-controls">
                        <button class="qty-btn" onclick="removeFromCart('${itemName}')">−</button>
                        <span class="quantity">${item.quantity}</span>
                        <button class="qty-btn" onclick="addToCart('${itemName}', ${item.price})">+</button>
                    </div>
                    <div class="item-total">₹${itemTotal}</div>
                `;
                cartItemsContainer.appendChild(cartItem);
            });

            // Calculate GST
            sgst = Math.round(subtotal * 0.025); // 2.5% SGST
            cgst = Math.round(subtotal * 0.025); // 2.5% CGST
            total = subtotal + sgst + cgst;

            // Update totals display
            subtotalElement.textContent = `₹${subtotal}`;
            sgstElement.textContent = `₹${sgst}`;
            cgstElement.textContent = `₹${cgst}`;
            totalAmountElement.textContent = `₹${total}`;
            cartTotalContainer.style.display = 'block';
            checkoutBtn.disabled = false;
        }

        // Checkout function
        function checkout() {
            if (Object.keys(cart).length === 0) return;

            const customerName = document.getElementById('customer-name').value.trim();
            const orderNotes = document.getElementById('order-notes').value.trim();

            let message = "hi, I want to order:\n\n";
            
            // Add items to message
            Object.keys(cart).forEach(itemName => {
                const item = cart[itemName];
                const itemTotal = item.price * item.quantity;
                message += `${item.quantity}x ${itemName} - ₹${itemTotal}\n`;
            });

            // Add GST breakdown
            message += `\nSubtotal: ₹${subtotal}`;
            message += `\nSGST (2.5%): ₹${sgst}`;
            message += `\nCGST (2.5%): ₹${cgst}`;
            message += `\nTotal (incl. GST): ₹${total}`;

            // Add customer details if provided
            if (customerName || orderNotes) {
                message += "\n\n--- Customer Details ---";
                if (customerName) {
                    message += `\nName: ${customerName}`;
                }
                if (orderNotes) {
                    message += `\nNotes: ${orderNotes}`;
                }
            }

            // Encode message for URL
            const encodedMessage = encodeURIComponent(message);
            const whatsappURL = `https://wa.me/919152399943?text=${encodedMessage}`;

            // Open WhatsApp
            window.open(whatsappURL, '_blank');
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            initMenu();
        });
    </script>
</body>
</html>
